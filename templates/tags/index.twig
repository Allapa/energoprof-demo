{% extends 'layout.twig' %}

{% block content %}
    <h1>Список тегов</h1>
    <p><a href="tags/create" class="btn btn-primary">Add New Tag</a></p>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="tags/{{ tag.id }}/edit" class="btn btn-sm btn-primary">Edit</a>
                    <form action="tags/{{ tag.id }}/delete" method="post" style="display: inline-block;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this tag?')">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
