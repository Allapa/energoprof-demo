{% extends "layout.twig" %}

{% block content %}
    <h1>Edit Client</h1>
    <form action="{{ path }}" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="first_name" name="first_name" value="{{ client.first_name }}" required>
        </div>
        <div class="form-group">
            <label for="name">Last name</label>
            <input type="text" class="form-control" id="last_name" name="last_name" value="{{ client.last_name }}" required>
        </div>
        <div class="form-group">
            <label for="name">Second Name</label>
            <input type="text" class="form-control" id="second_name" name="second_name" value="{{ client.second_name }}" required>
        </div>
        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="text" class="form-control" id="phone" name="phone" value="{{ client.phone }}" required>
        </div>
        <div class="form-group">
            <label for="tags">Tags</label>
            <select id="tags" name="tags[]" class="form-select" multiple>
                {% for tag in tags %}
                    <option value="{{ tag.id }}" {% if client.tags.contains(tag.id) %}selected{% endif %}>{{ tag.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="name">Company Name</label>
            <input type="text" class="form-control" id="company_name" name="company_name" value="{{ client.company_name }}" >
        </div>
        <div class="form-group">
            <label for="name">Comment</label>
            <textarea class="form-control" id="comment" name="comment">{{ client.comment }}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
{% endblock %}
